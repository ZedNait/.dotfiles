label-urgent-underline = ${colors.red}
label-urgent-padding = 1

label-empty = %icon%
label-empty-foreground = ${colors.foreground}
label-empty-padding = 1

format-padding = 0


; -------------------- modules -----------------------
[module/xwindow]
type                     = internal/xwindow
label                    = %title:0:40:...%

fotmat = <label>
format-padding = 0

label-empty =

[module/datetime]
type              = internal/date
interval          = 1
format            = <label>
label             = %time%
time              = "%a, %b %d %H:%M"
label-foreground  = ${colors.foreground}

