modules-center      = datetime
modules-right       = xkeyboard wireless-network vpn battery0 battery1

border-size = 0

; ---------------------- bspwm --------------------------
[module/bspwm]
type                       = internal/bspwm
pin-workspaces             = true
index-sort                 = true
enable-scroll              = false

