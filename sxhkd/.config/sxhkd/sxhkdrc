# wm independent hotkeys
#

super + Return
	st

super + {_,shift} + d
	rofi -show {drun,run} -show-icons

XF86Battery
	xsecurelock

super + p
  sh $HOME/.scripts/powermenu

XF86Audio{RaiseVolume,LowerVolume,Mute,MicMute}
	sh $HOME/.scripts/volumedunst.sh {volume_up,volume_down,volume_mute,capture_mute}

Print
	scrot "$HOME/Pictures/Screenshot %Y-%m-%d %H-%M-%S.png" && notify-send "png screenshot taken"

alt + Print
	scrot -s "$HOME/Pictures/Screenshot %Y-%m-%d %H-%M-%S.png" && notify-send "png screenshot taken"

# make sxhkd reload its configuration files:
super + shift + r
	pkill -USR1 -x sxhkd && bspc wm -r 

# quit bspwm normally
super + shift + Escape
	bspc quit

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# rotate current node 90 degrees
super + y
	bspc node @focused:/ -R 90

# set the window state
super + {t,shift + t,f}
	bspc node -t {tiled,pseudo_tiled,floating}

super + s
	bspc node -g sticky

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous node in the current desktop
alt + {_,shift + }Tab
	bspc node -f {next,prev}.local

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction

super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-10 0,0 10,0 -10,10 0}

